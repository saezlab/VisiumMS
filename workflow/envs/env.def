Bootstrap: docker
From: ubuntu:20.04

%environment
    # PATHS
    #export PATH=/opt/miniconda3/bin:$PATH
    #. /opt/miniconda3/etc/profile.d/conda.sh
    export PATH=/opt/:$PATH
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate env

%post

    # update apt
    apt update -y

    # basic packages (~2 min)
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends tzdata
    apt install -y build-essential  \
                   gcc \
                   cmake \
                   wget \
                   curl \
                   libcurl4-openssl-dev \
                   libssl-dev \
                   libxml2-dev \
                   libcairo2-dev \
                   libxt-dev \
                   libopenblas-dev \
                   git-all

    
    wget -O Miniforge3.sh "https://github.com/conda-forge/miniforge/releases/latest/download/Miniforge3-$(uname)-$(uname -m).sh"
    bash Miniforge3.sh -b -p "/opt/conda"
    . "/opt/conda/etc/profile.d/conda.sh"
    . "/opt/conda/etc/profile.d/mamba.sh"
    conda activate

    # conda
    #mkdir -p /opt/miniconda3
    #cd /opt/miniconda3 
    #wget https://repo.continuum.io/miniconda/Miniconda3-latest-Linux-x86_64.sh
    #bash Miniconda3-latest-Linux-x86_64.sh -p /opt/miniconda3 -b -f
    #rm Miniconda3-latest-Linux-x86_64.sh
    #export PATH=/opt/miniconda3/bin:$PATH

    # Install conda and mamba
    #conda update conda -y
    #. /opt/miniconda3/etc/profile.d/conda.sh
    #conda install -n base -c conda-forge mamba
    
    # Create env
    mamba create -y -n=env -c conda-forge -c bioconda \
    python=3.10.0 \
    pip \
    scanpy \
    leidenalg \
    harmonypy \
    jupyterlab \
    pytables \
    scrublet \
    cython \
    muon \
    ott-jax \
    numpyro \
    scvi-tools \
    openpyxl \
    flax \
    jax \
    ete3

    # Install with pip
    conda activate env
    pip install \
    git+https://github.com/saezlab/decoupler-py.git@b6b430e6bd61ceeee5e7307e4d9371d127fb1842 \
    liana==1.0.1 \
    PyMuPDF \
    mofapy2 \
    pydeseq2==0.3.5 \
    composition_stats \
    mofax \
    pertpy==0.5.0 \
    flax==0.7.4 \
    PyComplexHeatmap==1.5.4

    pip cache purge
    conda clean -a -y
